pipeline {
    agent any

    environment {
        EC2_HOST = "ubuntu@3.235.142.37"
        ARTIFACT_NAME = "my-maven-app-1.0-SNAPSHOT.jar"
    }

    stages {
        stage("Checkout") {
            steps {
                git branch: 'main', url: 'https://github.com/Betrand1999/jenkins-java-maven-project.git'
            }
        }
        
        stage("Build") {
            steps {
                sh "cd my-maven-app && mvn clean package"
            }
        }

        stage("Deploy to EC2") {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'aws-ssh-key', keyFileVariable: 'SSH_KEY')]) {
                    sh """
                        scp -i $SSH_KEY my-maven-app/target/$ARTIFACT_NAME $EC2_HOST:/home/ubuntu/
                        ssh -i $SSH_KEY $EC2_HOST <<'EOF'
                        pkill -f java || true
                        nohup java -jar /home/ubuntu/$ARTIFACT_NAME > app.log 2>&1 &
                        EOF
                    """
                }
            }
        }
    }

    post {
        success {
            echo "CI/CD Pipeline executed successfully!"
            echo "Access your application at: http://3.235.142.37:1010"
        }
        failure {
            echo "Pipeline failed. Please check the logs for details."
        }
    }
}
