pipeline {
    agent any

    stages {
        stage("Cleanup Workspace") {
            steps {
                script {
                    sh "rm -rf \$WORKSPACE/*"
                }
            }
        }

        stage("Checkout Code") {
            steps {
                checkout scm
            }
        }

        stage("Build") {
            steps {
                dir("my-app") {
                    sh "mvn clean package"
                }
            }
        }

        stage("SonarQube Analysis") {
            steps {
                dir("my-app") {
                    sh "sonar-scanner"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed. Check logs for details."
        }
    }
}
