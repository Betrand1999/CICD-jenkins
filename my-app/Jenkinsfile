pipeline {
    agent any

    environment {
        ARTIFACT_NAME = "my-app-1.0-SNAPSHOT.jar"
    }

    stages {
        stage("Checkout") {
            steps {
                checkout scm
            }
        }
        stage("Build") {
            steps {
                dir("my-app") {
                    sh "mvn clean package"
                }
            }
        }
    }

    post {
        success {
            echo "Build completed successfully!"
            echo "Artifact generated: target/${ARTIFACT_NAME}"
        }
        failure {
            echo "Build failed. Check logs for details."
        }
    }
} 
