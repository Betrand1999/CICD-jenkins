pipeline {
    agent any

    stages {
        stage("Build") {
            steps {
                dir("my-app") {
                    sh "mvn clean package"
                }
            }
        }

        stage("SonarQube Analysis") {
            steps {
                dir("my-app") {
                    script {
                        sh "/opt/sonar-scanner/bin/sonar-scanner -Dsonar.projectBaseDir=$WORKSPACE/my-app"
                    }
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed. Check logs for details."
        }
    }
}
